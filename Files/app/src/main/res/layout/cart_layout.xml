<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cart_product_image"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <TextView
            android:id="@+id/cart_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/cart_product_image"
            android:fontFamily="sans-serif-black"
            android:padding="5dp"
            android:text="Shop name"
            android:textColor="#80000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/cart_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_shop_name"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/cart_product_image"
            android:fontFamily="serif"
            android:text="Product name"
            android:textColor="#CC0F1010"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/cart_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_product_name"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/cart_product_image"
            android:fontFamily="monospace"
            android:text="quantity"
            android:textColor="#800F1010"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_quantity"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/cart_product_image"
            android:fontFamily="sans-serif-smallcaps"
            android:text="price"
            android:textColor="#0F1010"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.rey.material.widget.ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/cart_price"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/ic_baseline_add_circle_24"
            android:id="@+id/cart_add"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_price"
            android:layout_marginLeft="250dp"
            android:padding="5sp"
            android:layout_marginTop="0dp"
            android:text="1"
            android:textSize="30dp"
            android:id="@+id/number"/>

        <com.rey.material.widget.ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_baseline_do_disturb_on_24"
            android:layout_below="@id/cart_price"
            android:layout_marginLeft="200dp"
            android:id="@+id/cart_subtract"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_baseline_delete_24"
            android:layout_below="@id/cart_product_image"
            android:id="@+id/cart_delete"
            android:layout_marginLeft="16dp"
            />



    </RelativeLayout>


</androidx.cardview.widget.CardView>