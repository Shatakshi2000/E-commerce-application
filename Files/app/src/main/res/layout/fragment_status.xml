<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StatusFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/status_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0BA50B"
            app:title="Order Status"
            app:titleTextColor="@color/white" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_toolbar"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="44dp"

            />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/status_toolbar"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/checkBox1"
            android:src="@drawable/order" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status_toolbar"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="37dp"
            android:layout_toRightOf="@id/image1"
            android:text="Order Received"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="110dp"

            />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/image1"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@+id/checkBox2"
            android:src="@drawable/order_checked" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t1"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="130dp"
            android:layout_toRightOf="@id/image2"
            android:text="Order Confirmed"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox2"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="115dp"

            />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/image2"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@+id/checkBox3"
            android:src="@drawable/delivery" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t2"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="104dp"
            android:layout_toRightOf="@id/image3"
            android:text="Out for Delivery"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox3"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="140dp"

            />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/image3"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="100dp"
            android:layout_toRightOf="@+id/checkBox4"
            android:src="@drawable/delivered" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t3"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="120dp"
            android:layout_toRightOf="@id/image4"
            android:text="Order Delivered"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="110dp"
            android:background="@color/green"
            android:layout_below="@id/checkBox3"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:background="@color/green"
            android:layout_below="@id/checkBox2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:background="@color/green"
            android:layout_below="@id/checkBox1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"/>


    </RelativeLayout>

</FrameLayout>