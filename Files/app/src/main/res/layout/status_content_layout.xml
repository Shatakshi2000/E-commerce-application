<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/status_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0BA50B"
        app:title="Order Status"
        app:titleTextColor="@color/white" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_toolbar"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"


        />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/status_toolbar"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/checkBox1"
        android:src="@drawable/order" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_toolbar"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="37dp"
        android:layout_toRightOf="@id/image1"
        android:text="Order Received"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="72dp"

        />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/image1"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/checkBox2"
        android:src="@drawable/order_checked" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t1"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="72dp"
        android:layout_toRightOf="@id/image2"
        android:text="Order Confirmed"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="79dp"

        />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/image2"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/checkBox3"
        android:src="@drawable/delivery" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t2"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="74dp"
        android:layout_toRightOf="@id/image3"
        android:text="Out for Delivery"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox3"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="69dp"

        />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/image3"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/checkBox4"
        android:src="@drawable/delivered" />

    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t3"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="77dp"
        android:layout_toRightOf="@id/image4"
        android:text="Order Delivered"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />


</RelativeLayout>