<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/retailer_product_image"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <TextView
            android:id="@+id/retailer_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/retailer_product_image"
            android:fontFamily="sans-serif-black"
            android:padding="5dp"

            android:text="Shop name"
            android:textColor="#80000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/retailer_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/retailer_shop_name"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/retailer_product_image"
            android:fontFamily="serif"
            android:text="Product name"
            android:textColor="#CC0F1010"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/retailer_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/retailer_product_name"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/retailer_product_image"
            android:fontFamily="monospace"
            android:text="quantity"
            android:textColor="#800F1010"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/retailer_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/retailer_quantity"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/retailer_product_image"
            android:fontFamily="sans-serif-smallcaps"
            android:text="price"
            android:textColor="#0F1010"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/retailer_address"
            android:layout_width="137dp"
            android:layout_height="89dp"
            android:layout_below="@+id/retailer_product_image"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Address"
            android:textColor="#0F1010"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/retailer_add_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/retailer_price"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/retailer_product_image"
            android:fontFamily="sans-serif-black"
            android:text="ADD"
            app:backgroundTint="#F81515"
            android:background="@drawable/input_backgroung_design"/>
        <TextView
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reviews"
            android:layout_below="@id/retailer_add_product"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>