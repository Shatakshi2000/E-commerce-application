<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    android:padding="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/wholesaler_product_image"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <TextView
            android:id="@+id/wholesaler_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/wholesaler_product_image"
            android:fontFamily="sans-serif-black"
            android:padding="5dp"
            android:text="Shop name"
            android:textColor="#80000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/wholesaler_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wholesaler_shop_name"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/wholesaler_product_image"
            android:fontFamily="serif"
            android:text="Product name"
            android:textColor="#CC0F1010"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/wholesaler_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wholesaler_product_name"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/wholesaler_product_image"
            android:fontFamily="monospace"
            android:text="quantity"
            android:textColor="#800F1010"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/wholesaler_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wholesaler_quantity"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/wholesaler_product_image"
            android:fontFamily="sans-serif-smallcaps"
            android:text="price"
            android:textColor="#0F1010"
            android:textSize="24sp"
            android:textStyle="bold" />


        <ImageView

            android:id="@+id/edit"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_below="@+id/wholesaler_price"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"
            app:srcCompat="@drawable/ic_baseline_create_24" />

        <ImageView

            android:id="@+id/delete"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:layout_below="@+id/wholesaler_price"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/wholesaler_product_image"
            app:srcCompat="@drawable/ic_baseline_delete_24" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>